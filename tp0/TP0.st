Object subclass: #Ascensor	instanceVariableNames: 'pesoMaximo capacidad ascensor'	classVariableNames: ''	poolDictionaries: ''	category: 'tp0'!!Ascensor methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:40'!recibirPersona: persona	ascensor add: persona.	capacidad := capacidad + { persona obtenerPeso. }.	! !!Ascensor methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:39'!expulsarPersona	| ultimaPosicion persona |	ultimaPosicion := ascensor size.	persona := ascensor at: ultimaPosicion.	capacidad := capacidad - { persona obtenerPeso. }.	ascensor removeLast. 	! !!Ascensor methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:57'!excedioLimiteDeCapacidad	^ (capacidad at: 1) > pesoMaximo.! !!Ascensor methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 17:08'!especificarPesoMaximo: peso	pesoMaximo := peso.! !!Ascensor methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:54'!liberar	ascensor removeAll.	capacidad at: 1 put: 0.! !!Ascensor methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:39'!cantidadDePersonas	^ ascensor size.! !!Ascensor methodsFor: 'accessing' stamp: 'MartinStefanelli 8/30/2018 18:25'!capacidad 	^ capacidad at: 1.! !!Ascensor methodsFor: 'initialization' stamp: 'MartinStefanelli 8/30/2018 18:39'!initialize	super initialize. 	pesoMaximo := 0.	capacidad := { 0. } asIntegerArray.	ascensor := OrderedCollection new.	! !Object subclass: #Persona	instanceVariableNames: 'nombre peso'	classVariableNames: ''	poolDictionaries: ''	category: 'tp0'!!Persona methodsFor: 'initialization' stamp: 'MartinStefanelli 8/30/2018 18:44'!initialize	super initialize.	nombre := nil.	peso := 0.! !!Persona methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:47'!obtenerPeso	^ peso.! !!Persona methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:45'!especificarPeso: pesoParametro	peso := pesoParametro. ! !!Persona methodsFor: 'as yet unclassified' stamp: 'MartinStefanelli 8/30/2018 18:45'!especificarNombre: nombreParametro	nombre := nombreParametro. ! !